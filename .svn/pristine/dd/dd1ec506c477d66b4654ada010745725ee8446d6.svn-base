    function export($orderstatus){
        $res = Model::factory('Order')->get_orderlist_export();
        if(count($res)==0){
            Template::factory()->message(
                array(
                    'type' => 'error',
                    'title' => '导出数据为空',
                    'message' => '导出数据为空.',
                    'back' => TRUE)
            );
        }else{
            $list = array();
            foreach($res as $k => $v) {
                if(time()>=$v['expire_time']){
                    if($v['status']==8||$v['status']==21){ //还款成功或预授权扣款成功都不算逾期
                        if($v['status']==8){
                            $paytype='现金';
                        }
                        if($v['status']==21){
                            $paytype='预授权';
                        }
                        $hasoverdue='否';
                    }else{ //逾期
                        $paytype=' ';
                        $hasoverdue='逾期'.((int)((time()-$v['expire_time'])/86400)+1).'天';
                    }
                }else{ //未到还款期
                    $paytype=' ';
                    $hasoverdue=' ';
                }
                // 身份证查出生地区
                $res = HttpClient::factory('http://apis.baidu.com/apistore/idservice/id')->httpheader(array('apikey: '.$this->site_config['baidu_api_key']))->get(array('id'=>$v['code']))->execute()->as_array();
                //var_dump($res);
                if($res['errNum']==0){
                    $cardplace=$res['retData']['address'];
                }else{
                    $cardplace='err:'.$res['retMsg'];
                }
                // 手机查居住地区
                $res = HttpClient::factory('http://apis.baidu.com/apistore/mobilenumber/mobilenumber')->httpheader(array('apikey: '.$this->site_config['baidu_api_key']))->get(array('phone'=>$v['mobile']))->execute()->as_array();
                //var_dump($res);
                if($res['errNum']==0){
                    $telplace=$res['retData']['supplier'].' '.$res['retData']['province'].' '.$res['retData']['city'];
                }else{
                    $telplace='err:'.$res['retMsg'];
                }
                if(empty($v['repayment_finish_time'])){
                    if(in_array($v['status'],array(6,7,8,9,11))){
                        $rs=Model::factory('Order')->get_repayment_finish_time('finance_deduct',$v['id']);
                    }elseif(in_array($v['status'],array(20,21,22,23))) {
                        $rs = Model::factory('Order')->get_repayment_finish_time('finance_payment', $v['id']);
                    }else{
                        $rs='';
                    }
                    if($rs){
                        $repayment=date('Y-m-d H:i:s',$rs['create_time']);
                    }else{
                        $repayment='';
                    }
                }else{
                    $repayment=date('Y-m-d H:i:s',$v['repayment_finish_time']);
                }
                $list[] = array($v['id'],$v['name'],$v['code'],$v['mobile'],$v['loan_amount'],$paytype,$orderstatus[$v['status']],date('Y-m-d H:i:s',$v['start_time']),$v['day'].'天',$hasoverdue,$repayment,$cardplace,$telplace);
            }
            $filename ='order_'.date('YmdHis').'_export.csv';
            Lib::factory('CSV')->exportArray($filename,array(
                    'head' => array('ID','姓名','身份证号','手机','金额','还款方式','订单状态','借款时间','借款期限','是否逾期','还款时间','出生地区','居住地区'),
                    'type' => 'database',
                    'body' => $list,
                )
            );
        }
    }



