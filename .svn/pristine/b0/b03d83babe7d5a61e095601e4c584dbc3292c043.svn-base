    /**
     * 还款短信验证码
     */
    public function action_RepayVerifySMS()
    {

        $order_id = isset($this->_data['order_id']) ? (int)$this->_data['order_id'] : 0;
        if ($order_id < 1) {
            $this->response_json([], "4005", "参数错误");
        }
        $rs1 = $this->model['order']->getOneByUserId(App::$_token['user_id'], $order_id);

        if (!isset($rs1['status']) || !in_array($rs1['status'], [Model_Order::STATUS_PAID, Model_Order::STATUS_OVERDUE])) {
            $this->response_json([], "5068", "订单状态不允许该操作");
        }
        $mobile = $rs1['mobile'];


        if (isset($mobile) &&
            Valid::phone($mobile, 11) &&
            strlen($mobile) == 11 &&
            Valid::regex($mobile, '/^(13\d|14[57]|15[012356789]|18\d|17[01678])\d{8}$/')
        ) {

            $verify_code = Text::random('nozero', 1) . Text::random('numeric', 3);
            $verify_no = Text::random('numeric', 6);

            if ($rs = $this->model['verify']->today_mobile_token($mobile, App::$_token['id'], Model_Verify_Sms::TYPE_REPAY)) {
                if ($rs['send_count'] >= Model_Verify_Sms::RETRY_MAX) {
                    $this->response_json(['max_count' => Model_Verify_Sms::RETRY_MAX], "4006", "短信发送数超上限");
                };
                if ($rs['send_time'] > (time() - Model_Verify_Sms::RESEND_PERIOD)) {
                    $this->response_json(['next_send' => Model_Verify_Sms::RESEND_PERIOD - (time() - $rs['send_time'])], "5001", "短信发送间隔太短");
                };

                if (null !== $this->model['verify']->update($rs['id'], [
                        'verify_code' => $verify_code,
                        'verify_no' => $verify_no,
                        'send_count' => $rs['send_count'] + 1,
                        'expire_time' => time() + Model_Verify_Sms::EXPIRE_PERIOD,
                        'send_time' => time() + 1,
                    ])
                ) {
                    if ($this->model['verify']->send($mobile, $verify_code, Model_Verify_Sms::TYPE_REPAY)) {
                        $this->response_json(
                            [
                                'mobile' => $mobile,
                                'verify_no' => $verify_no,
                                'expire_in' => Model_Verify_Sms::EXPIRE_PERIOD,
                                'next_send' => Model_Verify_Sms::RESEND_PERIOD,
                                'send_count' => $rs['send_count'] + 1,
                                'max_count' => Model_Verify_Sms::RETRY_MAX,
                            ],
                            "1000",
                            "发送成功");
                    };
                };

                $this->response_json(
                    [
                        'mobile' => $mobile,
                        'verify_no' => '',
                        'expire_in' => Model_Verify_Sms::EXPIRE_PERIOD,
                        'next_send' => Model_Verify_Sms::RESEND_PERIOD,
                        'send_count' => $rs['send_count'],
                        'max_count' => Model_Verify_Sms::RETRY_MAX,
                    ],
                    "4000",
                    "发送失败");


            } else {

                if ($new_id = $this->model['verify']->create([
                                                                 'mobile' => $mobile,
                                                                 'token_id' => (int)App::$_token['id'],
                                                                 'type' => Model_Verify_Sms::TYPE_REPAY,
                                                                 'verify_code' => $verify_code,
                                                                 'verify_no' => $verify_no,
                                                                 'user_id' => isset(App::$_token['user_id']) ? (int)App::$_token['user_id'] : 0,
                                                                 'create_time' => time(),
                                                                 'send_time' => time() + 1,
                                                                 'expire_time' => time() + Model_Verify_Sms::EXPIRE_PERIOD,
                                                                 'status' => Model_Verify_Sms::STATUS_VALID,
                                                                 'send_count' => 1,
                                                             ])
                ) {

                    if ($this->model['verify']->send($mobile, $verify_code, Model_Verify_Sms::TYPE_REPAY)) {
                        $this->response_json(
                            [
                                'mobile' => $mobile,
                                'verify_no' => $verify_no,
                                'expire_in' => Model_Verify_Sms::EXPIRE_PERIOD,
                                'next_send' => Model_Verify_Sms::RESEND_PERIOD,
                                'send_count' => 1,
                                'max_count' => Model_Verify_Sms::RETRY_MAX,
                            ],
                            "1000",
                            "发送成功");
                    }

                }

                $this->response_json(
                    [
                        'mobile' => $mobile,
                        'verify_no' => '',
                        'expire_in' => Model_Verify_Sms::EXPIRE_PERIOD,
                        'next_send' => Model_Verify_Sms::RESEND_PERIOD,
                        'max_count' => Model_Verify_Sms::RETRY_MAX,
                    ],
                    "4000",
                    "发送失败");

            };


        } else {
            $this->response_json([], "4002", "订单记录手机号码格式错误");
        }


    }


    /**
     * 还款
     */
    public function action_SubmitRepay()
    {
        $order_id = isset($this->_data['order_id']) && $this->_data['order_id'] > 0 ? (int)$this->_data['order_id'] : 0;
        $bill_id = isset($this->_data['bill_id']) ? $this->_data['bill_id'] : 0;
        $verify_code = isset($this->_data['verify_code']) && $this->_data['verify_code'] ? $this->_data['verify_code'] : '';


        if (!(Valid::digit($verify_code) && Valid::exact_length($verify_code, 4))) {
            $this->response_json([], "5006", "验证码错误");
        }
        if ($order_id < 1) {
            $this->response_json([], "4005", "参数错误");
        }
        if ($bill_id === 0) {
            $this->response_json([], "4005", "参数错误");
        }
        $bill_id = $bill_id == 'all' ? 'all' : (int)$bill_id;
        $bill = [];
        if ($bill_id != 'all' && $bill_id > 0) {
            $bill = $this->model['bill']->getByArray(['user_id' => App::$_token['user_id'], 'bill_id' => $bill_id], [], 1);
            if (!$bill) {
                $this->response_json([], "5058", "账单不存在,或不是该用户账单");
            }
        }
        $order = $this->model['order']->getByArray(['user_id' => App::$_token['user_id'], 'order_id' => $order_id], [], 1);
        if (!$order) {
            $this->response_json([], "5058", "订单不存在,或不是该用户订单");
        }
        if (!isset($order['status']) || !in_array($order['status'], [(string)Model_Order::STATUS_PAID, (string)Model_Order::STATUS_OVERDUE])) {
            $this->response_json([], "5068", "订单状态不允许该操作");
        }
        if (isset($bill['status']) && !in_array($bill['status'], [(string)Model_Bill::STATUS_PAID, (string)Model_Bill::STATUS_OVERDUE])) {
            $this->response_json([], "5068", "订单状态不允许该操作");
        }

        /* 目前不加这个限制
         * if (Lib::factory('Date')->countDayDay($order['expire_time'], time()) > Model_Order::OVERDUE_REPAY_DAY) {
            $this->response_json([], "5102", "逾期超过" . Model_Order::OVERDUE_REPAY_DAY . "天，不能自主还款");
        }*/


        if (date('Y-m-d', $order['deduct_time']) == date('Y-m-d') && $order['active_repayment_count'] >= Model_Order::DEDCUT_FAILED_COUNT) {
            $this->response_json([], "5123", "今日还款失败次数过多，请明日再试");
        }

        $mobile = $order['mobile'];

        if ($vid = $this->model['verify']->check($mobile, App::$_token['id'], $verify_code, Model_Verify_Sms::TYPE_REPAY)) {
            //验证成功
        } else {
            if ($v = $this->model['verify']->period_mobile_token($mobile, App::$_token['id'], Model_Verify_Sms::TYPE_REPAY)) {
                $this->model['verify']->failed($v['id']);
            }
            $this->response_json([], "5006", "验证码错误");
        }


        $db = Database::instance();
        $db->begin();
        try{

            if ($bill_id == 'all') {
                $time = time();
                //提前还款部分
                $bills = $this->model['bill']->getByArray([
                                                              'user_id' => App::$_token['user_id'],
                                                              'order_id' => $order_id,
                                                              'status' => Model_Bill::STATUS_PAID,
                                                              'start_time__start' => $time,
                                                          ]);

                $due_bills = $this->model['bill']->getByArray([
                                                              'user_id' => App::$_token['user_id'],
                                                              'order_id' => $order_id,
                                                              'status' => [Model_Bill::STATUS_PAID, Model_Bill::STATUS_OVERDUE],
                                                              'start_time__end' => $time,
                                                          ]);
                //如果提前还款，修改还款金额金额（减去利息、管理费，增加违约金）
                if (count($bills) > 0) {
                    $bills_ids = array_column($bills, 'id');
                    $BillArchives = $this->model['bill_archive']->getByArray([
                                                                                'bill_id' => $bills_ids,
                                                                            ]);

                    $repay_principals = array_column($BillArchives, 'repay_principal');
                    $repay_interests = array_column($BillArchives, 'repay_interest');
                    $repay_damages = array_column($BillArchives, 'repay_damage');

                    $damages_amount = 0;
                    $interest_amount = 0;
                    foreach($bills as $k => $v){

                        if(!$this->model['bill']->update($v['id'], [
                            'repay_amount' => bcadd($repay_principals[$k], $repay_damages[$k], 2),
                            'repay_interest' => 0,
                            'repay_management' => 0,
                            'repay_damage' => $repay_damages[$k],
                            'status' => Model_Bill::STATUS_ACT_REPAY,
                            'act_repay_time' => time(),
                            'act_repay_count' => DB::expr('act_repay_count + 1'),
                        ])){

                            throw new Exception('还所有时提前还款部分账单修改失败');
                        }

                        $damages_amount += $repay_damages[$k];
                        $interest_amount += $repay_interests[$k];
                    }

                    //修改订单
                    if(!$this->model['order']->update($order_id, [
                        //'status' => Model_Order::STATUS_ACT_REPAY,
                        'repay_amount' => DB::expr('repay_amount + ' . $damages_amount . ' - ' . $interest_amount),
                    ])){
                        throw new Exception('还所有时提前还款部分订单金额修改失败');
                    }

                    if(!$this->model['order_charge']->update_amount($order_id, 'interest_1', [
                        'amount' => 0,
                    ])){
                        throw new Exception('还所有时提前还款部分order_charge修改失败');
                    }

                    if(!$this->model['order_charge']->create(App::$_token['user_id'], $order_id, [
                        'user_id' => App::$_token['user_id'],
                        'order_id' => $order_id,
                        'code' => Model_Order_Charge::TYPE_DAMAGE['code'],
                        'name' => Model_Order_Charge::TYPE_DAMAGE['name'],
                        'calc' => Model_Order_Charge::TYPE_DAMAGE['calc'],
                        'type' => Model_Order_Charge::TYPE_DAMAGE['type'],
                    ], $damages_amount)){
                        throw new Exception('还所有时提前还款部分order_charge插入失败');
                    }


                }

                //非提前还款部分

                //订单
                /*if ($order['status'] == Model_Order::STATUS_OVERDUE) {
                    if(!$this->model['order']->update($order_id, [
                        'status' => Model_Order::STATUS_OVERDUE_ACT_REPAY,
                    ])){
                        throw new Exception('还所有时非提前还款部分订单修改失败');
                    }


                } elseif ($order['status'] == Model_Order::STATUS_PAID) {
                    if(!$this->model['order']->update($order_id, [
                        'status' => Model_Order::STATUS_ACT_REPAY,
                    ])){
                        throw new Exception('还所有时非提前还款部分订单修改失败');
                    }

                }*/

                //账单
                if(!empty($due_bills)){
                    foreach ($due_bills as $v){
                        if($v['status'] == Model_Bill::STATUS_OVERDUE){
                            if(!$this->model['bill']->update($v['id'], [
                                'status' => Model_Bill::STATUS_OVERDUE_ACT_REPAY,
                                'act_repay_time' => time(),
                                'act_repay_count' => DB::expr('act_repay_count + 1'),
                            ])){
                                throw new Exception('还所有时非提前还款部分账单修改失败');
                            }

                        }elseif($v['status'] == Model_Bill::STATUS_PAID){
                            if(!$this->model['bill']->update($v['id'], [
                                'status' => Model_Bill::STATUS_ACT_REPAY,
                                'act_repay_time' => time(),
                                'act_repay_count' => DB::expr('act_repay_count + 1'),
                            ])){
                                throw new Exception('还所有时非提前还款部分账单修改失败');
                            }
                        }
                    }

                }



            } else {
                //不还所有时不会有违约金

                //订单
                /*if ($order['status'] == Model_Order::STATUS_OVERDUE) {
                    if(!$this->model['order']->update($order_id, [
                        'status' => Model_Order::STATUS_OVERDUE_ACT_REPAY,
                    ])){
                        throw new Exception('不还所有时订单修改失败');
                    }


                } elseif ($order['status'] == Model_Order::STATUS_PAID) {
                    if(!$this->model['order']->update($order_id, [
                        'status' => Model_Order::STATUS_ACT_REPAY,
                    ])){
                        throw new Exception('不还所有时订单修改失败');
                    }

                }*/

                //账单
                if($bill['status'] == Model_Bill::STATUS_OVERDUE){
                    if(!$this->model['bill']->update($bill_id, [
                        'status' => Model_Bill::STATUS_OVERDUE_ACT_REPAY,
                        'act_repay_time' => time(),
                        'act_repay_count' => DB::expr('act_repay_count + 1'),
                    ])){
                        throw new Exception('不还所有时账单修改失败');
                    }
                }elseif($bill['status'] == Model_Bill::STATUS_PAID){
                    if(!$this->model['bill']->update($bill_id, [
                        'status' => Model_Bill::STATUS_ACT_REPAY,
                        'act_repay_time' => time(),
                        'act_repay_count' => DB::expr('act_repay_count + 1'),
                    ])){
                        throw new Exception('不还所有时账单修改失败');
                    }
                }
            }


            $db->commit();
            $this->model['verify']->success($vid);
            $this->response_json([], "1000", "主动还款申请成功", null, false);
            if (function_exists('fastcgi_finish_request')) {
                fastcgi_finish_request();
            } else {
                ignore_user_abort(true);
            }
            Model::factory('JPush_Queue')->push_message_by_alias('JPUSH_wheel', ['user_id' => App::$_token['user_id'], 'mobile' => App::$_user['mobile']]);
            exit();


        }catch (Exception $e){
            $db->rollback();
            $this->response_json([$e->getTrace()], "4001", "主动还款申请失败");

        }

        $this->response_json([], "4000", "主动还款申请失败");



    }


