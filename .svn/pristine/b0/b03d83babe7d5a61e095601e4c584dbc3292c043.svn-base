    /**
     * 进行中订单 分页
     */
    public function action_Unfinished()
    {
        $last_id = isset($this->_data['last_id']) && $this->_data['last_id'] > 0 ? (int)$this->_data['last_id'] : 0;
        $pagesize = isset($this->_data['limit']) && $this->_data['limit'] > 0 && $this->_data['limit'] <= 100 ? (int)$this->_data['limit'] : $this->pagesize;

        $rs = $this->model['order']->unfinished(App::$_token['user_id'], $pagesize, $last_id);
        $order_array = [];
        $last_id = 0;
        if ($rs) {
            //'order.id', 'order.loan_amount', 'order.status', 'order.create_time', 'bill.repay_amount', 'bill.expire_time'
            foreach ($rs as $key => $row) {
                $arr_expire_time[$key]  = $row['expire_time'];
                $last_id = $row['id'];
            }
            array_multisort($arr_expire_time, SORT_DESC, $rs);
            foreach ($rs as $r) {
                $a = [];
                $a['id'] = (string)$r['id'];
                $a['loan_amount'] = isset($r['loan_amount']) && $r['loan_amount'] > 0 ? $r['loan_amount'] : '0';
                $a['status_source'] = (string)$r['status'];
                $a['status'] = isset($r['status']) && isset(Model_Order::$show_status[$r['status']]) ? Model_Order::$show_status[$r['status']] : '';
                $a['create_time'] = isset($r['create_time']) && $r['create_time'] > 0 ? date('Y/m/d', $r['create_time']) : '';
                $a['repay_amount'] = (string)$r['repay_amount'];
                $a['expire_time'] = isset($r['expire_time']) && $r['expire_time'] > 0 ? date('Y/m/d', $r['expire_time']) : '';
                $a['url'] = $this->_env['url']['app'] . '/v/Loan/Detail?orderId=' . $a['id'];
                $order_array[] = $a;
            }
        }
        $response_array = [];
        $response_array['order'] = $order_array;
        $response_array['last_id'] = (string)$last_id;


        $this->response_json($response_array, "1000", "借款记录");
    }


    /**
     * 借款记录 分页
     */
    public function action_Finished()
    {
        $last_id = isset($this->_data['last_id']) && $this->_data['last_id'] > 0 ? (int)$this->_data['last_id'] : 0;
        $pagesize = isset($this->_data['limit']) && $this->_data['limit'] > 0 && $this->_data['limit'] <= 100 ? (int)$this->_data['limit'] : $this->pagesize;

        $rs = $this->model['order']->finished(App::$_token['user_id'], $pagesize, $last_id);
        $order_array = [];
        $last_id = 0;
        if ($rs) {
            foreach ($rs as $r) {
                $a = [];
                $a['id'] = (string)$r['id'];
                $a['loan_amount'] = isset($r['loan_amount']) && $r['loan_amount'] > 0 ? $r['loan_amount'] : '0';
                $a['status_source'] = (string)$r['status'];
                $a['status'] = isset($r['status']) && isset(Model_Order::$show_status[$r['status']]) ? Model_Order::$show_status[$r['status']] : '';
                $a['create_time'] = isset($r['create_time']) && $r['create_time'] > 0 ? date('Y/m/d', $r['create_time']) : '';
                $a['url'] = $this->_env['url']['app'] . '/v/Loan/Detail?orderId=' . $a['id'];
                $order_array[] = $a;
                $last_id = $r['id'];
            }
        }
        $response_array = [];
        $response_array['order'] = $order_array;
        $response_array['last_id'] = (string)$last_id;


        $this->response_json($response_array, "1000", "借款记录");
    }


